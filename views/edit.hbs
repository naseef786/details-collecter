 {{#with user}}
<form  action="/update/{{this.id}}" method="post"  enctype="multipart/form-data" >
   
  <div class="form-row">

  <div class="form-group col-md-6">
  <input type="file" name="image"   class="form-control"  id="inputGroupFile02">
  <label class="input-group-text"  for="inputGroupFile02">Upload</label>
  {{#if this.image}}
  <image class="image" src="/../{{this.image}}"></image>
  {{/if}}
  </div>

  <div class="form-group col-md-6">
      <label for="">name</label>
      <input type="name" name="name" value="{{this.name}}" class="form-control" >
  </div>
  

  <div class="form-group col-md-6">
      <label for="">email</label>
      <input type="email" name="email"   value="{{this.email}}" class="form-control" >
  </div>
  
   
  <div class="form-group col-md-6">
      <label for="">studies</label>
      <input type="studies" name="studies" class="form-control"  value="{{this.studies}}" >
  </div>

  
  <div class="form-group col-md-6">
      <label for="">phone</label>
      <input type="number" name="phone"   value="{{this.phone}}" class="form-control" >
  </div>

  <div class="form-group col-md-6">
      <label for="">Age</label>
      <input type="number" name="age" class="form-control"  value="{{this.age}}" id="age">
  </div>
  
  <div class="form-group">
    <label for="inputAddress">Address</label>
    <input type="text" class="form-control" name="address" id="inputAddress" value="{{this.address}}">
  </div>

  <div class="form-group">
    <label for="inputAddress2">works</label>
    <input type="text" class="form-control" name="works" id="inputAddress2" value="{{this.works}}">
  </div>

  <div class="form-group col-md-6">
      <label for="">hobbies</label>
      <input type="hobbies" name="hobbies"  value="{{this.hobbies}}" class="form-control" >
  </div>
  </div>
  <button type="submit" class="btn btn-primary">Register</button>
</form>
{{/with}}
